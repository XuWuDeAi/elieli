<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context="main.zm.elieli.activity.ShowFanActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:padding="1dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_return" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fanname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#8080"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:background="@color/navigation_subtitle_secondary_text"
            android:textSize="17dp"
            android:text="miaomiao" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_fanpic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/placeholder_disk_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_attributes"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="TextView" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_showdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"



        android:layout_weight="1">


    </android.support.v7.widget.RecyclerView>
</LinearLayout>
